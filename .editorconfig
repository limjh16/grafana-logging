# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

[package.json]
indent_style = space
indent_size = 2

# Indented lists need to be 4 spaces by CommonMark spec
# https://commonmark.org/help/tutorial/10-nestedLists.html
[*.md]
indent_style = space
indent_size = 4

# yaml files should be 2 spaces indentation
# https://www.yaml.info/learn/bestpractices.html
[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.alloy]
indent_style = tab
indent_size = 2
